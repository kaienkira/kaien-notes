set nowrap
set ruler
set laststatus=2
set statusline=%m%r%h%([File:%F]\ [Col:%v]\ [Lin:%l/%L/%p%%]%)
set foldmethod=syntax
set ambiwidth=double
colorscheme desert

set guioptions-=T
set winaltkeys=no
winpos 200 400
