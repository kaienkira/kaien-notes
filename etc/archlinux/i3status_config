general {
    colors = false
    interval = 1
    output_format = i3bar
}

order += "battery all"
order += "wireless _first_"
order += "load"
order += "tztime local"

wireless _first_ {
    format_up = "wlan:[%essid][%quality][%frequency]"
    format_down = ""
}

battery all {
    format = "bat:[%status][%percentage]"
    format_down = ""
}

load {
    format = "load:[%1min]"
}

tztime local {
    format = "%Y-%m-%d %H:%M:%S %A"
}
