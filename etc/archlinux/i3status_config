general {
    colors = false
    output_format = i3bar
    interval = 1
}

order += "battery all"
order += "wireless _first_"
order += "load"
order += "cpu_usage"
order += "tztime local"

battery all {
    format = "%status %percentage"
    format_down = ""
}

wireless _first_ {
    format_up = "%essid"
    format_down = ""
}

load {
    format = "%1min"
}

cpu_usage {
    format = "%usage"
}

tztime local {
    format = "%Y-%m-%d %H:%M:%S %A"
}
