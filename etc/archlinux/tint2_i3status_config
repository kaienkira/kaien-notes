general {
    colors = false
    output_format = none
    interval = 1
}

order += "battery all"
order += "wireless _first_"
order += "load"
order += "cpu_usage"

battery all {
    format = "%status %percentage"
    format_down = "BAT[/]"
}

wireless _first_ {
    format_up = "%essid"
    format_down = "WLAN[/]"
}

load {
    format = "%1min"
}

cpu_usage {
    format = "%usage"
}
