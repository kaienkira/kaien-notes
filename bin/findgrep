#!/bin/sh

if [ $# -lt 2 ]
then
    echo 'usage: findgrep <filename> <keyword>'
    exit 1
fi

filename=$1
keyword=$2
grep_args=

if [ $# -ge 3 ]
then
    shift 2
    grep_args=$*
fi

find . -name "$filename" -type f -exec grep_color $grep_args "'$keyword'" \'{}\' \; -print
ret=$?
printf "\033[0m"

exit $ret;
