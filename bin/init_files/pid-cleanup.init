op_start()
{
    rm -f /opt/tl-server/run/tl-server.pid
    rm -f /opt/tl-kcptun/run/tl-kcptun.pid
    rm -f /opt/ssr-server/run/ssr-server.pid
}

case "$1" in
    start)
        op_start;;
    *)
        ;;
esac

exit 0
